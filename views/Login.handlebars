<div>
  <h1><a href="/">Skate Park</a></h1>

  <div class="py-4">
    <h2>Iniciar Sesión</h2>
    <hr class="w-80" />
    <section class="bg-dark"><br>
      <form onsubmit="event.preventDefault();">
        <div class="form-group">
    
          <div class="form-group">
            <label>Email</label>
            <input class="form-control w-50 m-auto" id="email" />
          </div>    
          <div class="form-group"><br>
            <label>Password</label>
            <input type="password" class="form-control w-50 m-auto" id="password" /><br>
          </div>
    
        </div>
    
        <div>
          <button class="button mb-3" style="margin-right: 15px" onclick="verificacion()">Ingresar</button>
          <a href="/"> <input type="button" class="button" value="Home"></a><br><br>
        </div>
    
        <div>
          <p>¿Te quieres inscribir en nuestro skate park? <a href="/registro"> 
          <input type="button" class="button" value="¡Registrate aqui!"></a></p>                         
        </div>
    
      </form><br>
    </section>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  const verificacion = async () => {
    const email = document.getElementById("email").value
    const password = document.getElementById("password").value
    const payload = { email, password }
    try {
        const { data: token } = await axios.post("/verify", payload)
        window.location.href = `/datos?token=${token}`
    } catch ({ response }) {
        const { data } = response
        const { error } = data
        alert(error)
    }
  }
</script>