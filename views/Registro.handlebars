<div>
  <h1><a href="/">Skate Park</a></h1>

  <div class="py-4">
    <h2>Registro</h2>
    <hr class="w-80" />
    <section class="bg-dark"><br>
    
      <form method="POST" enctype="multipart/form-data" action="http://localhost:3000/registrar">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input class="form-control m-auto" id="email" name="email" required />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" id="nombre" name="nombre" required /><br>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input type="password" class="form-control m-auto" id="password" name="password" required />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input type="password" class="form-control m-auto" id="password-2" name="password_2" required /><br>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input class="form-control m-auto" id="anios" name="anios" required />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class="form-control m-auto" id="especialidad" name="especialidad" required /><br>
          </div>
          <div class="form-group col-12 col-sm-12"><br>
            <label>Foto de perfil</label>
            <input class="button mb-1" style="color: white" type="file" name="foto" id="foto" required />
          </div>
        </div><br>
        <button type="submit" class="button" style="margin-right: 15px">Registrarme</button>
        <a href="/login"> <input type="button" class="button" style="margin-right: 15px" value="Iniciar sesión"></a>
        <a href="/"> <input type="button" class="button" value="Home"></a><br><br>

      </form>
    </section>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>